{% extends "baseTemplate.html.twig" %}

{% block title %}
	Nouvelle application
{% endblock %}

{% block content %}
	<div class="container mt-6 mb-4">
		<div class="card">
			<div class="card-body">

				<div class="container">
					<h3 class="perso-titre">
						Formulaire Application
					</h3>

					<a href="{{path("role_index")}}" class="btn btn-sm  text-white my-3 fw-bold" style="background-color: #FBBB01;">Liste</a>

					{{ form_start(form) }}
					{{ form_errors(form)}}

					<div class="row">
						<div class="col-12 col-md-6">

							{{ form_row(form.nom) }}

						</div>
						<div class="col-12 col-md-6">
							{{ form_row(form.codeApp) }}
						</div>
					</div>


					<button type="submit" class="btn btn-primary">
						<i class="fas fa-save"></i>
						Enregistrer
					</button>
					{{ form_end(form) }}
				</div>

			</div>
		</div>
	{% endblock %}
