{% extends "baseTemplate.html.twig"%}

{% block stylesheets%}
<link rel="stylesheet" href="{{ App.base_path }}/Views/css/ListDomRech.css">
{% endblock%}

{% block content %}


	<div class="container">
		<h2 class="text-center fs-1 fw-bold bg-black py-2" style="color: #FBBB01">
			Listes Agence Service Autoriser
		</h2>
		<input type="text" id="searchInput" class="form-control my-3" placeholder="Rechercher...">

		<a href="{{path("autoriser_new")}}" class="btn btn-sm bg-dark text-white my-3 fw-bold">Nouveau</a>
		<table class="table  table-striped table-shadow shadow  rounded ">
			<thead class="table-dark">
				<tr>
					<th>Actions</th>
					<th>Nom d'utilisateur</th>
					<th>Code Agence Service</th>
					<th>Date de Cr√©ation</th>
				</tr>
			</thead>
			<tbody id="tableBody">
				{% for item in data %}

					<tr>
						<td>
							<div class="dropdown">
								<button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration: none; color: #000; font-weight: 700">
									Actions
								</button>
								<ul class="dropdown-menu dropdown-menu-end" id="dropdown-menu" aria-labelledby="dropdownMenuButton" style="">
									<li>
										<a class="dropdown-item fw-bold" href="{{ path("autoriser_update", {id: item.id})}}">Modifier</a>
									</li>

									<li>
										<a class="dropdown-item fw-bold" style="color: red;" href="{{ path("autoriser_delete", {id: item.id})}}">Supprimer</a>
									</li>
								</ul>
							</div>
						</td>
						<td>{{ item.SessionUtilisateur}}</td>
						<td>{{ item.CodeAgenceServiceIrium}}</td>
						<td>{{ item.Date_creation|date('d-m-Y')}}</td>

					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}

{% block javascript %}
	<script src="{{ App.base_path }}/Views/js/admin/agenceServiceAutoriser/listAgenceServiceAutoriser.js" type="module"></script>
{% endblock %}
