{% extends "baseTemplate.html.twig"%}

{# {% form_theme form _self %} #}

{% block content %}
	<div class="container">
		<h2 class="text-center fs-1 fw-bold bg-black py-2" style="color: #FBBB01">
			Formulaire Profil User
		</h2>

		<a href="{{path("user_list")}}" class="btn btn-sm  text-white my-3 fw-bold" style="background-color: #FBBB01;">Liste</a>

		{{ form_start(form) }}
		{{ form_errors(form)}}

		<div class="row">
			<div class="col-12 col-md-6">
				{{ form_row(form.app) }}
				{{ form_row(form.utilisateur, {'attr': {'class': 'selectUser form-control'}}) }}
				{{ form_row(form.profil) }}
			</div>
			<div class="col-12 col-md-6">

				{{ form_row(form.matricule) }}
				{{ form_row(form.mail) }}
			</div>
		</div>


		<button type="submit" class="btn btn-primary ajout-overlay">
			<i class="fas fa-save"></i>
			Enregistrer
		</button>
		{{ form_end(form) }}
	</div>
{% endblock %}

{% block javascript %}
	<script src="{{ App.base_path }}/Views/js/admin/user/profilUser.js"></script>
{% endblock %}

